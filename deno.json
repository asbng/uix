{
	"importMap": "./importmap.dev.json",
	"compilerOptions": {
		"module": "esnext",
		"target": "es2022",
		"noImplicitOverride":true,
		"removeComments": true,
		"preserveConstEnums": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"jsx": "react-jsx",
		"jsxImportSource": "uix",
		"lib": ["deno.window", "dom"]
	},
	"tasks": {
		"expose-uix": "deno run -Aq --reload https://dev.cdn.unyt.org/unyt_node/file_server.ts -w --port 4200",
		"run-test-app": "cd test-app && deno run -Aq ../run.ts -rw --import-map http://localhost:4200/importmap.uixdev.json --port 4201"
	}
}